# AniList OAuth (get from https://anilist.co/settings/developer)
# Frontend needs only the client ID
VITE_ANILIST_CLIENT_ID=your_client_id

# Backend environment variables (not exposed to frontend)
ANILIST_CLIENT_ID=your_client_id
ANILIST_CLIENT_SECRET=your_secret_here

# Database (MariaDB)
DATABASE_HOST=your_mariadb_ct_ip
DATABASE_PORT=3306
DATABASE_USER=anime_ranker
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=anime_ranker

# Server
PORT=3000
NODE_ENV=development
SESSION_SECRET=generate_random_32_char_string
FRONTEND_URL=http://localhost:5173

# Production URLs (for reference)
# FRONTEND_URL=https://qanimeranker.qstivi.com
# ANILIST_REDIRECT_URI=https://qanimeranker.qstivi.com/api/auth/callback
