# AniList OAuth (get from https://anilist.co/settings/developer)
ANILIST_CLIENT_ID=your_client_id
ANILIST_CLIENT_SECRET=your_client_secret
ANILIST_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Database (MariaDB/MySQL)
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=anime_ranker
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=anime_ranker

# Server
PORT=3000
NODE_ENV=development
SESSION_SECRET=generate_a_random_32_char_string_here
FRONTEND_URL=http://localhost:5173

# Frontend only (for Vite)
VITE_ANILIST_CLIENT_ID=your_client_id
